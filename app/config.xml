        <icon src="www/app-icon-android-128.png" density="xxhdpi" />
        <icon src="www/app-icon-android-512.png" density="xxxhdpi" />
    </platform>

    <platform name="ios">
        <icon src="www/app-icon-ios-1024.png" width="1024" height="1024" />

        <!-- iPhone 6 / 6+ -->
        <icon src="www/app-icon-ios-50.png" width="50" height="50" />
