<?xml version='1.0' encoding='utf-8'?>
<widget id="biz.sivuduuni.abitaulukot" android-packageName="biz.sivuduuni.abitaulukot" version="1.1.2" versionCode="4" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name="android-targetSdkVersion" value="26" />
    <name>Abitaulukot</name>
    <description>
        Offline version of Abitti help files including scientific tables.
    </description>
    <author email="office@sivuduuni.biz" href="http://sivuduuni.biz">
        Sivuduuni Global Oy
    </author>
    <platform name="android" />
    <platform name="ios" />

